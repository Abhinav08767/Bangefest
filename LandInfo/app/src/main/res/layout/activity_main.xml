<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/landplot"
    >

    <TextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="88dp"
        android:textAlignment="center"
        android:text="Landinfo"
        android:textColor="@color/colorExtra"
        android:textSize="60dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:textAlignment="center"
        android:layout_marginLeft="00dp"
        android:layout_marginTop="-20dp"
        android:text="Find and discover plots"
        android:textColor="@color/colorExtra"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/change"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_below="@+id/subhead"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="287dp"
        android:background="@drawable/buttons"
        android:text="Start"
        android:textColor="@color/colorPrimaryDarks"
        android:textSize="30dp"
        android:textStyle="bold" />

</RelativeLayout>
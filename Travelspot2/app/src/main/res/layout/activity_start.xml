<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity"
    android:background="@drawable/carss">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Travelspot"
        android:textAllCaps="true"
        android:textColor="@color/colornew"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="76dp"
        android:fontFamily="sans-serif"
        android:text="FIND AND DISCOVER CABS"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colornew"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:text="REGISTER cabs"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:id="@+id/signin"
        android:textStyle="bold"
        android:textFontWeight="50000000"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginBottom="4dp"
        android:background="@drawable/buttons" />

    <Button
        android:layout_width="match_parent"
        android:id="@+id/login"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/buttons"
        android:fontFamily="sans-serif-condensed"
        android:text="driver login"
        android:textColor="@color/colorPrimaryDark"
        android:textFontWeight="50000000"
        android:textSize="20dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/book"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="136dp"
        android:background="@drawable/buttons"
        android:fontFamily="sans-serif-condensed"
        android:text="book cabs"
        android:textColor="@color/colorWhite"
        android:textFontWeight="50000000"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>